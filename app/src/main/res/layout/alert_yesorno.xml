<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dip"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="10dip"
    android:background="@drawable/alert_bg">  
    <LinearLayout 
	    android:orientation="horizontal"    
	    android:layout_width="fill_parent"    
	    android:layout_height="wrap_content"
	    android:background="@drawable/title_foot_bg"
	    android:layout_margin="1dip">    
	    <ImageView
	        android:layout_width="wrap_content"    
	        android:layout_height="wrap_content"
	        android:src="@drawable/alert_title_icon"
	        android:layout_marginLeft="10dip"/>    
	    <TextView     
	        android:id="@+id/alert_yn_title"
	        android:text="test"
	        android:textColor="#ffffff"
	        android:textSize="16sp"
	        android:layout_width="wrap_content"    
	        android:layout_height="wrap_content"      
	        android:layout_gravity="center_vertical"
	        android:layout_marginLeft="10dip"/>    
	</LinearLayout>  
    
    <TextView
    	android:id="@+id/alert_yn_content"
		android:text="请做出判断！"
		android:layout_width="fill_parent"
		android:layout_height="40dip"
		android:textSize="14sp"
		android:textColor="#000000"
		android:layout_marginTop="10dip"
		android:paddingLeft="10dip"
        android:paddingRight="10dip"/>
   
    <LinearLayout
    	android:layout_width="fill_parent" 
        android:layout_height="wrap_content"         
        android:gravity="center_horizontal"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:layout_marginTop="10dip"
        android:orientation="horizontal">
          
		<Button 
			android:id="@+id/alert_yn_cancel_btn"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" 
			android:text="取消" 
			android:gravity="center_horizontal"
			android:paddingTop="6dip"
			android:paddingBottom="6dip"
			android:textColor="#000000"
			android:background="@drawable/alert_button_background"
			android:textSize="16sp"
			android:layout_weight="50"/>  
		<Button 
			android:id="@+id/alert_yn_sure_btn"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" 
			android:text="确定" 
			android:gravity="center_horizontal"
			android:paddingTop="6dip"
			android:paddingBottom="6dip"
			android:layout_marginLeft="10dip"
			android:textColor="#000000"
			android:background="@drawable/alert_button_background"
			android:textSize="16sp"
			android:layout_weight="50"/> 
       </LinearLayout>
</LinearLayout>
