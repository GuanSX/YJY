<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="20dip"
    android:paddingTop="10dip"
	android:background="@drawable/custom_menu_bg">
    <Button 
		android:id="@+id/menu_courseware_photo_btn"
		android:layout_width="fill_parent" 
		android:layout_height="36dip" 
		android:text="浏览本地图片" 
		android:gravity="center"
		android:layout_marginTop="16dip"
		android:layout_marginLeft="10dip"
		android:layout_marginRight="10dip"
		android:textColor="#000000"
		android:background="@drawable/drawable_click"
		android:textSize="16sp"/>
     <Button 
		android:id="@+id/menu_courseware_video_btn"
		android:layout_width="fill_parent" 
		android:layout_height="36dip" 
		android:text="浏览本地视频" 
		android:gravity="center"
		android:layout_marginTop="16dip"
		android:layout_marginLeft="10dip"
		android:layout_marginRight="10dip"
		android:textColor="#000000"
		android:background="@drawable/drawable_click"
		android:textSize="16sp"/>
      <Button 
		android:id="@+id/menu_courseware_doc_btn"
		android:layout_width="fill_parent" 
		android:layout_height="36dip" 
		android:text="浏览本地文档" 
		android:gravity="center"
		android:layout_marginTop="16dip"
		android:layout_marginLeft="10dip"
		android:layout_marginRight="10dip"
		android:textColor="#000000"
		android:background="@drawable/drawable_click"
		android:textSize="16sp"/>
       <Button
		android:id="@+id/menu_courseware_music_btn"
		android:layout_width="fill_parent" 
		android:layout_height="36dip" 
		android:text="浏览本地音乐" 
		android:gravity="center"
		android:layout_marginTop="16dip"
		android:layout_marginLeft="10dip"
		android:layout_marginRight="10dip"
		android:textColor="#000000"
		android:background="@drawable/drawable_click"
		android:textSize="16sp"/>
        <Button 
		android:id="@+id/menu_courseware_apk_btn"
		android:layout_width="fill_parent" 
		android:layout_height="36dip" 
		android:text="浏览本地应用" 
		android:gravity="center"
		android:layout_marginTop="16dip"
		android:layout_marginLeft="10dip"
		android:layout_marginRight="10dip"
		android:textColor="#000000"
		android:background="@drawable/drawable_click"
		android:textSize="16sp"/>
         <Button 
		android:id="@+id/menu_courseware_file_btn"
		android:layout_width="fill_parent" 
		android:layout_height="36dip" 
		android:text="浏览本地文件" 
		android:gravity="center"
		android:layout_marginTop="16dip"
		android:layout_marginLeft="10dip"
		android:layout_marginRight="10dip"
		android:textColor="#000000"
		android:background="@drawable/drawable_click"
		android:textSize="16sp"/>

	<Button 
		android:id="@+id/menu_courseware_type_cancel_btn"
		android:layout_width="fill_parent" 
		android:layout_height="36dip" 
		android:text="取消" 
		android:gravity="center"
		android:layout_marginTop="16dip"
		android:layout_marginLeft="10dip"
		android:layout_marginRight="10dip"
		android:textColor="#ffffff"
		android:background="@drawable/drawable_cancle"
		android:textSize="16sp"/>
</LinearLayout>
