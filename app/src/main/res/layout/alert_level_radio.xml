<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dip"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="10dip"
	android:background="@color/white">

    <LinearLayout 
	    android:orientation="horizontal"    
	    android:layout_width="fill_parent"    
	    android:layout_height="wrap_content"
	   android:background="@color/black"
	    android:layout_margin="1dip">    
	    <ImageView
	        android:layout_width="wrap_content"    
	        android:layout_height="wrap_content"
	        android:src="@drawable/alert_title_icon"
	        android:layout_marginLeft="10dip"/>    
	    <TextView     
	        android:id="@+id/alert_level_title"
	        android:text="修改级别"
	        android:textColor="@color/white"
	        android:textSize="16sp"
	        android:layout_width="wrap_content"    
	        android:layout_height="wrap_content"      
	        android:layout_gravity="center_vertical"
	        android:layout_marginLeft="10dip"/>    
	</LinearLayout>  
    
    <RadioGroup 
    	 android:id="@+id/level_radiogroup"
    	 android:layout_width="fill_parent" 
    	 android:layout_height="wrap_content"
		android:layout_marginLeft="10dip">
	     <RadioButton 
	     	android:id="@+id/radioxiaoxue"
			android:layout_marginTop="8dip"
	     	android:layout_width="fill_parent" 
	     	android:layout_height="wrap_content"     	
	     	android:text="小学" 
	     	android:checked="true"
	     	android:textColor="#000000" 	
	     	android:paddingRight="30dip"
	     	android:button="@null"  
	        android:drawableRight="@drawable/mycheckbox">
	     </RadioButton>
	     <View  
	         android:layout_width="fill_parent"  
	         android:layout_height="1px"  
	         android:background="@color/line_view"
	         android:layout_marginLeft="10dip"
	         android:layout_marginRight="10dip"/>  
	     <RadioButton 
	       	android:id="@+id/radiochuzhong"
			android:layout_marginTop="8dip"
	     	android:layout_width="fill_parent"      	
	     	android:layout_height="wrap_content" 
	     	android:text="初中"
	     	android:textColor="#000000"
	     	android:paddingRight="30dip"
	     	android:button="@null"  
	        android:drawableRight="@drawable/mycheckbox" >
	     </RadioButton>    
	        <View  
	         android:layout_width="fill_parent"  
	         android:layout_height="1px"  
	         android:background="@color/line_view"
	         android:layout_marginLeft="10dip"
	         android:layout_marginRight="10dip"/>  
	     <RadioButton 
	       	android:id="@+id/radiogaozhong"
			android:layout_marginTop="8dip"
	     	android:layout_width="fill_parent"      	
	     	android:layout_height="wrap_content" 
	     	android:text="高中"
	     	android:textColor="#000000"
	     	android:paddingRight="30dip"
	     	android:button="@null"  
	        android:drawableRight="@drawable/mycheckbox" >
	     </RadioButton>   
	        <View  
	         android:layout_width="fill_parent"  
	         android:layout_height="1px"  
	         android:background="@color/line_view"
	         android:layout_marginLeft="10dip"
	         android:layout_marginRight="10dip"/>  
	     <RadioButton 
	       	android:id="@+id/radiodaxue"
			android:layout_marginTop="8dip"
	     	android:layout_width="fill_parent"      	
	     	android:layout_height="wrap_content" 
	     	android:text="大学"
	     	android:textColor="#000000"
	     	android:paddingRight="30dip"
	     	android:button="@null"  
	        android:drawableRight="@drawable/mycheckbox" >
	     </RadioButton>   
	        <View  
	         android:layout_width="fill_parent"  
	         android:layout_height="1px"  
	         android:background="@color/line_view"
	         android:layout_marginLeft="10dip"
	         android:layout_marginRight="10dip"/>  
	     <RadioButton 
	       	android:id="@+id/radiochengjiao"
			android:layout_marginTop="8dip"
	     	android:layout_width="fill_parent"      	
	     	android:layout_height="wrap_content" 
	     	android:text="成教"
	     	android:textColor="#000000"
	     	android:paddingRight="30dip"
	     	android:button="@null"  
	        android:drawableRight="@drawable/mycheckbox" >
	     </RadioButton>   
	        <View  
	         android:layout_width="fill_parent"  
	         android:layout_height="1px"  
	         android:background="@color/line_view"
	         android:layout_marginLeft="10dip"
	         android:layout_marginRight="10dip"/>  
	     <RadioButton 
	       	android:id="@+id/radiozhijiao"
			android:layout_marginTop="8dip"
	     	android:layout_width="fill_parent"      	
	     	android:layout_height="wrap_content" 
	     	android:text="职教"
	     	android:textColor="#000000"
	     	android:paddingRight="30dip"
	     	android:button="@null"  
	        android:drawableRight="@drawable/mycheckbox" >
	     </RadioButton>   
   </RadioGroup>
   
    <LinearLayout
    	android:layout_width="fill_parent" 
        android:layout_height="wrap_content"         
        android:gravity="center_horizontal"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:layout_marginTop="10dip"
        android:orientation="horizontal">
          
		<Button 
			android:id="@+id/alert_level_cancel_btn"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" 
			android:text="取消" 
			android:gravity="center_horizontal"
			android:paddingTop="6dip"
			android:paddingBottom="6dip"
			android:textColor="#000000"
			android:background="@drawable/alert_button_background"
			android:textSize="16sp"
			android:layout_weight="50"/>  
		<Button 
			android:id="@+id/alert_level_sure_btn"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" 
			android:text="确定" 
			android:gravity="center_horizontal"
			android:paddingTop="6dip"
			android:paddingBottom="6dip"
			android:layout_marginLeft="10dip"
			android:textColor="#000000"
			android:background="@drawable/alert_button_background"
			android:textSize="16sp"
			android:layout_weight="50"/> 
       </LinearLayout>
</LinearLayout>
