	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="top">
		<include
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			layout="@layout/view_title_for_activity" />
	</LinearLayout>


	<LinearLayout 
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="30px" 
		android:paddingLeft="20dip"
		android:paddingRight="20dip"
		android:weightSum="1">
		<EditText 
			android:id="@+id/ui_username_input"
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content" 
			android:background="@drawable/round_editview"
			android:digits="@string/agg_string_only_enable_number_english_letter" 
			android:textSize="14sp"
			android:textColor="#666666"
			android:layout_gravity="center"
			android:paddingTop="8dip"  
			android:paddingBottom="8dip" 
			android:paddingLeft="6dip"
			android:hint="输入粤教云账号"/>
		
	</LinearLayout>
	<LinearLayout 
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="10px" 
		android:paddingLeft="20dip"
		android:paddingRight="20dip"
		android:weightSum="1">
		<EditText 
			android:id="@+id/ui_password_input"
			android:inputType="textPassword"
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content" 
			android:textColor="#666666"
			android:digits="@string/agg_string_only_enable_number_english_letter" 
			android:hint="输入密码" 
			android:textSize="14sp"
			android:background="@drawable/round_editview"
			android:layout_gravity="center"
			android:paddingTop="8dip"  
			android:paddingBottom="8dip" 
			android:paddingLeft="6dip"/>
	</LinearLayout>
	<Button 
		android:id="@+id/ui_login_btn"
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content" 
		android:text="登录" 
		android:gravity="center_horizontal"
		android:layout_marginTop="20px"
		android:paddingTop="6dip"
		android:paddingBottom="6dip"
		android:layout_marginLeft="20dip"
		android:layout_marginRight="20dip"
		android:textColor="#ffffff"
		android:background="@drawable/greenbutton"
		android:textSize="16sp"/>
	
	<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/login_pwdback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/common_tv_words_selector"
            android:text="取回密码" />

        <TextView
            android:id="@+id/login_reg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:clickable="true"
            android:background="@drawable/common_tv_words_selector"
            android:text="快速注册" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <View
            android:layout_width="40dp"
            android:layout_height="1dp"
            android:layout_marginTop="48dp"
            android:background="#000000" />

        <TextView
            android:id="@+id/tv_backPwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="40dp"
            android:text="快捷登录" />

        <View
            android:layout_width="40dp"
            android:layout_height="1dp"
            android:layout_marginTop="48dp"
            android:background="#000000" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_tencent"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/common_tv_qq_selector"
            android:clickable="true"
            android:text="腾讯QQ" 
            android:gravity="center_horizontal"/>

        <TextView
            android:id="@+id/tv_micromsg"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/common_tv_weixin_selector"
            android:clickable="true"
            android:text="微信" 
            android:gravity="center_horizontal"
            />

        <TextView
            android:id="@+id/tv_sinamicroblog"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:drawableTop="@drawable/common_tv_sina_selector"
            android:text="新浪微博" 
            android:gravity="center_horizontal"/>
    </LinearLayout>
	
</LinearLayout>
