<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_weight="0"
        android:background="@drawable/title_foot_bg" >



        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center"
            android:orientation="vertical"

            >

            <TextView
                android:id="@+id/textview_courseware"
                android:layout_width="match_parent"
                android:layout_height="4dip" >
            </TextView>

            <Button
                android:id="@+id/tab_courseware"
                android:layout_width="40dip"
                android:layout_height="40dip"
                android:layout_marginTop="-6dip"
                android:background="@drawable/nav_chat"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-8dip"
                android:gravity="center"
                android:text="课件"
                android:textColor="#ffffff"
                android:textSize="12sp" >
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textview_yuliu1"
                android:layout_width="match_parent"
                android:layout_height="4dip" >
            </TextView>

            <Button
                android:id="@+id/tab_mycourseware"
                android:layout_width="40dip"
                android:layout_height="40dip"
                android:layout_marginTop="-6dip"
                android:background="@drawable/nav_contact"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/button_nav1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-8dip"
                android:gravity="center"
                android:text="记录"
                android:textColor="#ffffff"
                android:textSize="12sp" >
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textview_yuliu2"
                android:layout_width="match_parent"
                android:layout_height="4dip" >
            </TextView>

            <Button
                android:id="@+id/tab_yuliu2"
                android:layout_width="40dip"
                android:layout_height="40dip"
                android:layout_marginTop="-6dip"
                android:background="@drawable/nav_space"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-8dip"
                android:gravity="center"
                android:text="预留2"
                android:textColor="#ffffff"
                android:textSize="12sp" >
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textview_setting"
                android:layout_width="match_parent"
                android:layout_height="4dip" >
            </TextView>

            <Button
                android:id="@+id/tab_setting"
                android:layout_width="40dip"
                android:layout_height="40dip"
                android:layout_marginTop="-6dip"
                android:background="@drawable/nav_setting"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-8dip"
                android:gravity="center"
                android:text="设置"
                android:textColor="#ffffff"
                android:textSize="12sp" >
            </TextView>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>