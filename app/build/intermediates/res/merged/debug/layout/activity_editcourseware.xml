<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/body_bg"
              android:orientation="vertical"
    >

    <LinearLayout
        android:id="@+id/edit_top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top">

        <include
            layout="@layout/view_title_for_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/edit_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dip"
            android:src="@drawable/my_card"
            />


        <TextView
            android:id="@+id/edit_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_icon"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:text="课件名"
            android:textColor="#000000"
            android:textSize="20sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/edit_uploder_layout"
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:background="@drawable/drawable_pressed_normal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/edit_uploader_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:src="@drawable/my_card"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:layout_toRightOf="@id/edit_uploader_icon"
            android:text="上传者"
            android:textColor="#000000"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/edit_uploder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dip"
            android:text="上传者"
            android:textColor="#000000"
            android:textSize="14sp"/>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/edit_level_layout"
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:background="@drawable/drawable_pressed_normal"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/msg_options_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:src="@drawable/msg_options"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:layout_toRightOf="@id/msg_options_image"
            android:text="级别"
            android:textColor="#000000"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/edit_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dip"
            android:text="小学"
            android:textColor="#000000"
            android:textSize="14sp"/>

        <ImageView
            android:id="@+id/msg_options_go"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:src="@drawable/list_more"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:background="@drawable/drawable_pressed_normal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/system_info_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:src="@drawable/system_info"/>

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:layout_toRightOf="@id/system_info_image"
            android:text="花费"
            android:textColor="#000000"
            android:textSize="14sp"/>

        <RelativeLayout
            android:id="@+id/edit_input_layout"
            android:layout_width="100dip"
            android:layout_height="match_parent"
            android:layout_centerInParent="true">

            <EditText
                android:id="@+id/edit_cost"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:background="@color/transparent"
                android:gravity="center"
                android:maxLength="4"
                android:numeric="integer"
                android:singleLine="true"
                android:textSize="20dp"
                android:text="0"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dip"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:layout_marginBottom="5dip"
                android:background="@color/bottom_textview"/>
        </RelativeLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:layout_toRightOf="@+id/edit_input_layout"
            android:text="元"
            android:textColor="#000000"/>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="50dip"
        android:gravity="top"
        android:orientation="horizontal"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        >

        <Button
            android:id="@+id/edit_cancle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dip"
            android:layout_weight="50"
            android:background="@drawable/greenbutton"
            android:gravity="center_horizontal"
            android:paddingBottom="6dip"
            android:paddingTop="6dip"
            android:text="取 消"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:visibility="visible"
            />

        <Button
            android:id="@+id/edit_publish"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dip"
            android:layout_weight="50"
            android:background="@drawable/greenbutton"
            android:gravity="center_horizontal"
            android:paddingBottom="6dip"
            android:paddingTop="6dip"
            android:text="发 布"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:visibility="visible"/>
    </LinearLayout>


</LinearLayout>