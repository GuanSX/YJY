<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:paddingBottom="20dip"
              android:paddingTop="10dip"
              android:background="@drawable/custom_menu_bg">

    <Button
        android:id="@+id/menu_courseware_download_btn"
        android:layout_width="fill_parent"
        android:layout_height="36dip"
        android:text="下载"
        android:gravity="center"
        android:layout_marginTop="16dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:textColor="#000000"
        android:background="@drawable/drawable_click"
        android:textSize="16sp"/>
    <Button
        android:id="@+id/menu_courseware_refresh_btn"
        android:layout_width="fill_parent"
        android:layout_height="36dip"
        android:text="刷新"
        android:gravity="center"
        android:layout_marginTop="16dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:textColor="#000000"
        android:background="@drawable/drawable_click"
        android:textSize="16sp"/>
    <Button
        android:id="@+id/menu_courseware_delete_btn"
        android:layout_width="fill_parent"
        android:layout_height="36dip"
        android:text="删除"
        android:gravity="center"
        android:layout_marginTop="16dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:textColor="#000000"
        android:background="@drawable/drawable_click"
        android:textSize="16sp"/>
    <Button
        android:id="@+id/menu_courseware_edit_btn"
        android:layout_width="fill_parent"
        android:layout_height="36dip"
        android:text="编辑"
        android:gravity="center"
        android:layout_marginTop="16dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:textColor="#000000"
        android:background="@drawable/drawable_click"
        android:textSize="16sp"/>

    <Button
        android:id="@+id/menu_courseware_cancel_btn"
        android:layout_width="fill_parent"
        android:layout_height="36dip"
        android:text="取消"
        android:gravity="center"
        android:layout_marginTop="16dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:textColor="#ffffff"
        android:background="@drawable/drawable_cancle"
        android:textSize="16sp"/>
</LinearLayout>
